        <TextView
            android:id="@+id/txt_jak_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siang 32ᵒC Malam 27ᵒC"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_jak_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta Pusat, Indonesia"
            android:layout_below="@id/txt_jak_2"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/txt_jak_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.13 WIB"
            android:layout_below="@id/txt_jak_3"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/txt_jak_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31ᵒC"
            android:layout_below="@id/txt_jak_4"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-10dp"/>

        <TextView
            android:id="@+id/txt_jak_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terasa seperti 32.5ᵒC"
            android:layout_below="@id/txt_jak_5"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/txt_jak_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kemungkinan Hujan : 0%"
            android:layout_below="@id/txt_jak_6"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/sun"
            android:id="@+id/img_sun"/>

        <TextView
            android:id="@+id/txt_jak_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cerah"
            android:layout_below="@id/img_sun"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_detail_2"
        android:layout_width="380dp"
        android:layout_height="140dp"
        android:layout_toRightOf="@id/lay_detail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tema_white">

        <TextView
            android:id="@+id/txt_jak_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
