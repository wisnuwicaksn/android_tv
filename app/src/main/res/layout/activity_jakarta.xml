<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jak_layout"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@color/primaryColor"
    tools:context=".JakartaActivity"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">

    <Button
        android:id="@+id/btn_jak_1"
        android:layout_width="118dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_shape3"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:layout_width="133dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_jak_1"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_shape2"
        android:gravity="center"
        android:drawableStart="@drawable/home1"
        android:paddingStart="40dp"
        android:id="@+id/btn_jak_2"
        tools:ignore="RtlSymmetry" />

    <Button
        android:layout_width="118dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_jak_2"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_shape3"
        android:gravity="center"
        android:drawableLeft="@drawable/setting"
        android:paddingStart="40dp"
        android:id="@+id/btn_jak_3"/>

    <Button
        android:layout_width="118dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_jak_3"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_shape3"
        android:gravity="center"
        android:drawableLeft="@drawable/info"
        android:paddingStart="40dp"
        android:id="@+id/btn_jak_4"/>

    <TextView
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="Jakarta Pusat, Indonesia"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btn_jak_2"
        android:textSize="20sp"
        android:id="@+id/txt_jak_1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:layout_toRightOf="@id/btn_jak_1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:id="@+id/lay_detail"
        android:layout_width="373dp"
        android:layout_height="420dp"
        android:layout_below="@id/txt_jak_1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/btn_jak_2"
        android:background="@drawable/tema_white">


        <ImageView
            android:layout_width="445dp"
            android:layout_height="232dp"
            android:layout_alignParentBottom="true"
